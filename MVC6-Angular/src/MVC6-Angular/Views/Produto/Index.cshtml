@{
    Layout = null;
}
<h3>
    Produto
    <small>listagem de produtos.</small>
</h3>

<div ng-controller="ProdutoController as ctrl" class="container-fluid">

    <div class="row">
        <div class="col-lg-12">
            <div class="panel panel-default">
                <div class="panel-body">
                    <div class="row">
                        <div class="col-md-4">
                            <div class="box-placeholder">
                                <button class="btn btn-primary btn-lg" ng-click="gerarToken()" type="button">Gerar Token</button>
                            </div>
                        </div>
                        <div class="col-md-4 col-md-offset-4">
                            <div class="box-placeholder" ng-class="{'bg-danger': (tempoExpiracao <= 0)}">Token: {{token}}</div>
                            <div class="box-placeholder" ng-hide="(tempoExpiracao <= 0)">Expira em: {{tempoExpiracao}} segundos</div>
                            <div class="box-placeholder bg-danger" ng-hide="!(tempoExpiracao <= 0)">Token expirado</div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="row">
        <div class="col-lg-12">
            <div class="panel panel-default">
                <div class="panel-heading">
                    Produto |
                    <small>lista de produtos</small>
                </div>
                <div class="panel-body">

                    <div class="row">
                        <div class="col-md-4">
                            <div class="box-placeholder">
                                <button class="btn btn-primary btn-lg" ng-click="buscarProdutos()" type="button">Buscar Produtos MVC</button>
                                <button class="btn btn-primary btn-lg" ng-click="buscarProdutos()" type="button">Buscar Produtos AJAX</button>
                            </div>
                        </div>                        
                    </div>

                    <table id="grid-usuarios-mobile" datatable="ng" dt-options="ctrl.dtOptions" dt-column-defs="ctrl.dtColumnDefs" class="table table-striped table-bordered">
                        <thead>
                            <tr>
                                <th>#</th>
                                <th>Nome</th>
                                <th>Descrição</th>
                                <th>Preço</th>
                            </tr>
                        </thead>
                        <tbody>
                            <tr ng-repeat="item in produtos">
                                <td>{{$index}}</td>

                                <td>
                                    {{ item.nome || 'não definido' }}
                                </td>

                                <td>
                                    {{ item.descricao || 'não definido' }}
                                </td>

                                <td>
                                    {{ item.preco || 'não definido' }}
                                </td>

                            </tr>
                        </tbody>
                    </table>

                </div>
            </div>
        </div>
    </div>
</div>
